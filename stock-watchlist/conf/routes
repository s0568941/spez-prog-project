# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /welcome                    controllers.AuthenticationController.index()
GET     /register                   controllers.AuthenticationController.register()
GET     /logout                     controllers.AuthenticationController.logout()
#POST    /validateLogin              controllers.AuthenticationController.validateLogin()  # this is the mocked login validation (without DB)
POST    /validateLogin              controllers.AuthenticationDBController.validateLogin()
#POST    /validateRegister           controllers.AuthenticationController.validateRegister()
POST    /validateRegisterForm       controllers.AuthenticationDBController.validateRegisterForm()
#POST    /validateRegisterForm       controllers.AuthenticationController.validateRegisterForm() # this is the mocked register validation (without DB)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
